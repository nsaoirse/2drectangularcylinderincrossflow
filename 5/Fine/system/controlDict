FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pisoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         15;

deltaT          0.004;

adjustTimeStep  yes;  //automatically set the Courant number

maxCo           0.5; // limit maximum Courant number

maxDeltaT 	0.5; // Maximum timeStep between simulations

writeControl    runTime;

writeInterval   .5;

purgeWrite      0;

writeFormat     ascii;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;
libs
(
    "libOpenFOAM.so"
);
OptimisationSwitches
   {
	fileHandler collated;
	maxThreadFileBufferSize 2e9;
	maxMasterFileBufferSize 2e9;
   }

functions
    {
    #includeFunc  residuals
    #includeFunc  surfaces	 
    #includeFunc  forceCoeffsIncompressible

         cylindersForce
	 {
		 type          forces;
		 libs          ("libforces.so");
		 writeControl  outputTime;
		 timeInterval  1;
		 log           yes;
		 patches       (cylinders);
		 rho           rhoInf;     // Indicates incompressible
		 log           true;
		 rhoInf        1;          // Redundant for incompressible
		 CofR          (20 20 0);    // Rotation around centroid of group
		 pitchAxis     (0 0 1);
	 }

   	 sixDoFRigidBodyState
    	{
        type           sixDoFRigidBodyState;
        libs           ("libsixDoFRigidBodyState.so");
        angleFormat    degrees;
    	}
}

// ************************************************************************* //
